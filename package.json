{
	"name": "vsregex",
	"displayName": "VSRegex",
	"description": "Create and test regular expression.",
	"version": "0.1.0",
	"publisher": "StevenCyb",
	"homepage": "https://github.com/StevenCyb/VSRegex",
	"repository": {
		"type": "git",
		"url": "https://github.com/StevenCyb/VSRegex"
	},
	"bugs": {
		"url": "https://github.com/StevenCyb/VSRegex/issues"
	},
	"license": "Apache License Version 2.0",
	"author": {
		"name": "Steven Cybinski"
	},
	"markdown": "github",
	"icon": "resources/icon.png",
	"engines": {
		"vscode": "^1.55.0"
	},
	"categories": [
		"Testing",
		"Education",
		"Visualization",
		"Programming Languages"
	],
	"keywords": [
		"vsregex",
		"regex"
	],
	"activationEvents": [
		"onCommand:vsregex.explain",
		"onCommand:vsregex.hints",
		"onView:vsregex-sidebar"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vsregex.explain",
				"category": "VSRegex",
				"title": "Explain",
				"icon": {
					"light": "resources/light/explain.svg",
					"dark": "resources/dark/explain.svg"
				}
			},
			{
				"command": "vsregex.hints",
				"category": "VSRegex",
				"title": "Regex Hints",
				"icon": {
					"light": "resources/light/question.svg",
					"dark": "resources/dark/question.svg"
				}
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "vsregex-sidebar-view",
					"title": "VSRegex",
					"icon": "resources/icon.svg"
				}
			]
		},
		"views": {
			"vsregex-sidebar-view": [
				{
					"type": "webview",
					"id": "vsregex-sidebar",
					"name": "VSRegex",
					"icon": "resources/icon.svg",
					"contextualTitle": "VSRegex"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "vsregex.explain",
					"when": "view == vsregex-sidebar",
					"group": "navigation"
				},
				{
					"command": "vsregex.hints",
					"when": "view == vsregex-sidebar",
					"group": "navigation"
				}
			]
		},
		"configuration": {
			"title": "VSRegex",
			"properties": {
				"VSRegex.backgroundColor": {
					"type": "string",
					"pattern": "^(#[a-fA-F0-9]{6})$",
					"patternErrorMessage": "Color must be in hex format #123456",
					"default": "#5a9282",
					"description": "Background color for matches"
				},
				"VSRegex.backgroundColorOpacity": {
					"type": "number",
					"default": 80,
					"minimum": 0,
					"maximum": 100,
					"description": "Background color opacity for matches"
				},
				"VSRegex.color": {
					"type": "string",
					"pattern": "^(#[a-fA-F0-9]{6})$",
					"patternErrorMessage": "Color must be in hex format #123456",
					"default": "#eeeeee",
					"description": "Font color for matches"
				},
				"VSRegex.outlineColor": {
					"type": "string",
					"pattern": "^(#[a-fA-F0-9]{6})$",
					"patternErrorMessage": "Color must be in hex format #123456",
					"default": "#5a9282",
					"description": "Outline hex color for matches"
				},
				"VSRegex.outlineColorOpacity": {
					"type": "number",
					"default": 0,
					"minimum": 0,
					"maximum": 100,
					"description": "Background color opacity for matches"
				},
				"VSRegex.outlineStyle": {
					"type": "string",
					"enum": [
						"dotted",
						"dashed",
						"solid",
						"double",
						"groove",
						"ridge",
						"inset",
						"outset"
					],
					"default": "solid",
					"description": "Outline style for matches"
				},
				"VSRegex.outlineWidth": {
					"type": "number",
					"default": 0,
					"minimum": 0,
					"maximum": 10,
					"description": "Outline px width for matches"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/node": "^15.0.2",
		"@types/vscode": "^1.55.0",
		"ts-loader": "^9.2.1",
		"tsc-watch": "^4.2.9",
		"typescript": "^4.2.4",
		"webpack": "^5.37.1",
		"webpack-cli": "^4.7.0"
	}
}
